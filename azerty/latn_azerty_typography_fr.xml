<?xml version="1.0" encoding="utf-8"?>
<!--
Adapted by Philippe Ivaldi with logic placements and French typography in mind.
- Add very used key sequences :
  - c' l' t' s' d' j'
  - «   » (with no-break space before french quotes)
  -  ;  :  !  ? (with no-break space before punctuation)
- Add common alphabet grapheme and accents
- œ æ ä ï ù ô û â
- Group accented letters with the main letter (éèê with e not with u, d etc)
 -->
<keyboard name="AZERTY (Français Typographe)" script="latin">
  <row>
    <key key0="a" key1="â" key2="1" key4="à"/>
    <key key0="z" key1="\#" key2="2" key3="&amp;" key4="~"/>
    <key key0="e" key1="è" key2="3" key3="é" key4="ê"/>
    <key key0="r" key1="" key2="4" key3="'" key4="&quot;"/>
    <key key0="t" key1="(" key2="5" key3=")" key4="t'"/>
    <key key0="y" key2="6" key3="-" key4="|"/>
    <key key0="u" key1="ù" key2="7" key3="û" key4="`"/>
    <key key0="i" key1="ï" key2="8" key3="_"/>
    <key key0="o" key1="ô" key2="9" key3="\@" key4="œ"/>
    <key key0="p" key2="0"/>
  </row>
  <row>
    <key key0="q" key2="loc tab"/>
    <key key0="s" key3="loc ß" key4="s'"/>
    <key key0="d" key1="loc accent_grave" key3="loc accent_aigu" key4="d'"/>
    <key key0="f" key3="{" key4="}"/>
    <key key0="g" key3="[" key4="]"/>
    <key key0="h" key3="=" key4="+"/>
    <key key0="j" key1="loc accent_trema" key2="loc accent_circonflexe" key3="^" key4="j'"/>
    <key key0="k" key1="æ" key2="ä" key3="$" key4="€"/>
    <key key0="l" key2="%" key4="l'"/>
    <key key0="m" key2="µ" key3="*" key4="m'"/>
  </row>
  <row>
    <key width="2.0" key0="shift" key2="loc capslock"/>
    <key key0="w" key1="&gt;" key2=" :" key3="&lt;" key4=" ;"/>
    <key key0="x" key1=" »" key2=" ?" key3="« " key4=" !"/>
    <key key0="c" key1="loc accent_cedille" key2="ç" key3="," key4="c'"/>
    <key key0="v" key1=":" key2="…" key3=";" key4="."/>
    <key key0="b" key1="\?" key2="!" key3="\\" key4="/"/>
    <key key0="n" key1="loc accent_tilde"  key3="§" key4="n'"/>
    <key width="2.0" key0="backspace" key2="delete" key3="loc esc"/>
  </row>
</keyboard>
